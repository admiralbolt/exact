{{#if session.isAuthenticated}}
  {{#if creatingNew}}
    <EquationDetail @isNew="true" @createCallback={{action "createCallback"}} @cancelCallback={{action "createCallback"}} />
  {{else}}
    <button {{action "createNew"}}>Create New Equation</button>
  {{/if}}
{{/if}}

{{#if (not creatingNew)}}
  <div class="tab-set">
    {{#each coordinateSystems as |name|}}
      <div class="tab {{is-active name coord}}" {{action "setSelectedCoord" name}} role="button">
        {{name}}
      </div>
    {{/each}}
  </div>

  <div class="tab-set">
    {{#each activeCategories as |name|}}
      <div class="tab {{is-active name category}}" {{action "setSelectedCategory" name}} role="button">
        {{name}}
      </div>
    {{/each}}
  </div>

  {{#each activeEquations as |equation|}}
    <LinkTo @route="contents.equation" @model={{equation.id}}>{{equation.name}}</LinkTo>
  {{/each}}
{{/if}}
